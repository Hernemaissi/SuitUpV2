<!DOCTYPE html>
<html lang="<%= I18n.locale || "en" %>">
	<head>

          <style>
    /* Prevents slides from flashing */
    #slides {
      display:none;
    }
  </style>

        <meta charset="UTF-8">
		<title> <%= t "application.title" %> </title>
		<%= stylesheet_link_tag "application", :media => "all", "data-turbolinks-track" => true  %>

		<%= javascript_include_tag "application", "data-turbolinks-track" => true  %>
		<%= csrf_meta_tags %>
		<meta name="viewport" content="width=device-width">
		<%= yield :head %>
	</head>
	<body>

	<div class="header-container">
			<header>
				<nav id="dropdown-nav" class="dropdown">
					<div class="dropdown-icon"></div>
					<ul>

						<li>
							<%= nav_link_single("nav.home" , root_path) %>
						</li>
						<li>
							<%= nav_link_single("nav.search", search_path) %>
						</li>
						<li>
							<%= nav_link_single("nav.companies", companies_path) %>
						</li>
						<li>
							<%= nav_link_single("nav.about", about_path) %>
						</li>
					</ul>

				</nav>

				<div class="language-bar">
					<ul>
						<li>
							<%= link_to "Suomi", :locale =>"fi", :lang=>"fi" %>
						</li>
						<li>
							<%= link_to "English", :locale=>"en", :lang=>"en" %>
						</li>
					</ul>
				</div>
				<a class="banner" href="/">Suit Up</a>
				<!--<a class="banner" href="/"> <%= image_tag("banner-small.png", :class => "banner-small") %>
				<%= image_tag("banner-large.png", :class => "banner-large") %> </a>-->
				<!-- <div class="separator-line header-line"></div> -->
				<nav class="large">
					<ul>
						<li>
							<a id="gender_male"><%= t "nav.male" %></a>
						</li>
						<li>
							<a id="gender_female"><%= t "nav.female" %></a>
						</li>
					</ul>
				<!-- <div class="separator-line"></div> -->
					<ul>
						<li>
							<%= nav_link_single("nav.home" , root_path) %>
						</li>
						<li>
							<%= nav_link_single("nav.search", search_path) %>
						</li>
						<li>
							<%= nav_link_single("nav.companies", companies_path) %>
						</li>
						<li>
							<%= nav_link_single("nav.about", about_path) %>
						</li>
						<% if user_signed_in? %>
						<li><%= link_to t("nav.profile"), profile_path(current_user.id) %></li>
						<% end %>
					</ul>
				</nav>
			</header>
		</div>
				<div class="separator-line double"></div>
		<div class="main-container">
			<div role="document" class="document">
				<%= yield %>
			</div>
		</div>
		<div class="footer-background">
			<div class="footer-container">
				<footer>
					<p>
						<%= t "application.title" %>
					</p>
					<p>
						<!--<%= t "footer.text" %>-->
					</p>
				</footer>
			</div>
		</div>



<%= debug(params) if Rails.env.development? %>
</body>
</html>
