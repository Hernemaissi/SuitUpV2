<div class="">
<h1>Create new ad</h1>
  <%= form_for @ad, :html =>  {:multipart => true} do |f| %>


    <div>
    <%= f.label :name, :class => "field_label required" %>
    <%= f.text_field :name, :class => "field" %>
  </div>

 <div>
    <%= f.label :description, :class => "field_label required"  %>
    <%= f.text_field :description, :class => "field"  %>
  </div>
 <div>
    <%= f.label :color, :class => "field_label required"  %>
    <%= f.text_field :color, :class => "field"  %>
  </div>
      <div class="field_label"> Upload Image </div>    
      <p> <%= ENV["CLOUD_NAME"] %> </p>

    <%= hidden_field_tag "image_id", :value => 2 %>

    <%= file_field_tag "images[image_1]", :class => "image_upload" %>
    <%= file_field_tag "images[image_2]", :class => "hidden image_upload" %>
    <%= file_field_tag "images[image_3]", :class => "hidden image_upload" %>
    <%= file_field_tag "images[image_4]", :class => "hidden image_upload" %>
    <%= file_field_tag "images[image_5]", :class => "hidden image_upload" %>

  <div>
      <%= submit_tag "Create ad", class: "btn btn-large btn-primary" %></div>
    <% end %>
 </div>
