<div class="row">
  <div class="span6 offset3">
  <%= form_for @ad, :html =>  {:multipart => true} do |f| %>


    <p> Upload Image </p>
    <%= file_field_tag :image %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :description %>
    <%= f.text_field :description %>

    <%= f.label :color %>
    <%= f.text_field :color %>

      <%= submit_tag "Create ad", class: "btn btn-large btn-primary" %>
    <% end %>
 </div>
</div>